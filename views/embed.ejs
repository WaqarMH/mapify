<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mapify - Embedded Map</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            overflow: hidden;
        }
        #map {
            height: 100vh;
            width: 100%;
        }
    </style>
</head>
<body>
    <div id="map"></div>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        // Pass the map configuration from EJS to JavaScript
        const mapConfig = <%- JSON.stringify(mapConfig).replace(/<\/script>/g, '<\\/script>') %>;
        
        // Initialize map
        const map = L.map('map', {
            zoomControl: false,
            scrollWheelZoom: mapConfig.scrollZoom !== false
        }).setView([mapConfig.locations[0].lat, mapConfig.locations[0].lng], mapConfig.zoom || 12);

        // Add tile layer
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        // Add markers
        mapConfig.locations.forEach(location => {
            const marker = L.marker([location.lat, location.lng]).addTo(map);
            if (location.popupText) {
                marker.bindPopup(location.popupText);
            }
        });

        // Fit bounds if multiple locations
        if (mapConfig.locations.length > 1) {
            const bounds = L.latLngBounds(mapConfig.locations.map(loc => [loc.lat, loc.lng]));
            map.fitBounds(bounds, { padding: [50, 50] });
        }
    </script>
</body>
</html>
